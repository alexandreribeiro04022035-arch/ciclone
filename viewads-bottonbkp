<body onload="loadUserAndAds();">

<header>View Ads</header>

<div class="user-info" id="userInfo">Carregando usu√°rio...</div>

<div class="container">
    <h2>An√∫ncios Dispon√≠veis</h2>
    <a href="dashboard.html">VOLTAR</a>
    
    <div class="ad-grid" id="adsList"></div>
</div>

<script>
function loadUserAndAds() {
    const user = JSON.parse(localStorage.getItem('user'));
    
    if (!user) {
        window.location.href = 'login-top.html';
        return;
    }

    document.getElementById('userInfo').textContent = 
        `Usu√°rio: ${user.nome} | Saldo: R$ ${parseFloat(user.saldo_redisponivel || 0).toFixed(2)}`;

    loadAds();
}

// Fun√ß√£o para tratar erro de carregamento de imagem
function handleImageError(imgElement) {
    const parent = imgElement.parentElement;
    parent.innerHTML = `
        <div class="image-placeholder">
            <div class="icon">üñºÔ∏è</div>
            <div class="text">Imagem n√£o carregada</div>
        </div>
    `;
}

async function loadAds() {
    try {
        const resposta = await fetch('https://ciclone-62mq.onrender.com/api/anuncios');
        
        if (!resposta.ok) {
            throw new Error(`Erro na API: ${resposta.status}`);
        }
        
        const dados = await resposta.json();
        
        console.log('üì¶ Dados completos da API:', dados);
        
        if (dados.success) {
            const ads = dados.anuncios;
            const adsList = document.getElementById("adsList");
            adsList.innerHTML = "";

            if (ads.length === 0) {
                adsList.innerHTML = `
                    <div style="grid-column: 1 / -1; text-align: center; padding: 40px; color: #6c757d;">
                        <div style="font-size: 48px; margin-bottom: 10px;">üì≠</div>
                        <h3>Nenhum an√∫ncio dispon√≠vel</h3>
                        <p>Volte mais tarde para ver novos an√∫ncios.</p>
                    </div>
                `;
                return;
            }

            ads.forEach(ad => {
                console.log('üîç An√∫ncio carregado:', ad);
                
                const box = document.createElement("div");
                box.className = "ad-box";
                box.onclick = () => openAd(ad.id);

                // VERIFICA SE √â IMAGEM
                const isImage = ad.banner_url && 
                               /\.(jpg|jpeg|png|gif|webp|bmp)$/i.test(ad.banner_url);

                // Determina √≠cone baseado no tipo
                const urlIcon = isImage ? 'üñºÔ∏è' : 'üîó';
                const placeholderIcon = isImage ? 'üñºÔ∏è' : 'üîó';
                const placeholderText = isImage ? 'Sem imagem' : 'Sem banner';

                box.innerHTML = `
                    <!-- √ÅREA DO BANNER -->
                    <div style="height: 90px; overflow: hidden; border-radius: 5px; margin-bottom: 8px; background: #f8f9fa;">
                        ${ad.banner_url ? 
                            `<img src="${ad.banner_url}" 
                                  style="width: 100%; height: 100%; object-fit: cover;"
                                  alt="${ad.titulo || 'Banner do an√∫ncio'}"
                                  onerror="handleImageError(this)">` 
                            : `<div class="image-placeholder">
                                  <div class="icon">${placeholderIcon}</div>
                                  <div class="text">${placeholderText}</div>
                               </div>`
                        }
                    </div>
                    
                    <!-- T√çTULO E DESCRI√á√ÉO -->
                    <div class="ad-title">${ad.titulo || 'Sem t√≠tulo'}</div>
                    <div class="ad-desc">${ad.descricao || 'Sem descri√ß√£o'}</div>
                    
                    <!-- URL VIS√çVEL -->
                    ${ad.banner_url ? 
                        `<div class="url-info" title="${ad.banner_url}">
                         ${urlIcon} ${ad.banner_url.length > 35 ? ad.banner_url.substring(0, 35) + '...' : ad.banner_url}
                         </div>` 
                        : '<div class="url-info">‚ùå Sem URL</div>'
                    }
                    
                    <!-- TEMPO DE VISUALIZA√á√ÉO -->
                    <div class="ad-footer">${ad.tempo_exibicao || 30} segundos</div>
                `;

                adsList.appendChild(box);
            });
        } else {
            throw new Error(dados.message || 'Erro ao carregar an√∫ncios');
        }
    } catch (erro) {
        console.error('Erro ao carregar an√∫ncios:', erro);
        const adsList = document.getElementById("adsList");
        adsList.innerHTML = `
            <div style="grid-column: 1 / -1; text-align: center; padding: 40px; color: #dc3545;">
                <div style="font-size: 48px; margin-bottom: 10px;">‚ö†Ô∏è</div>
                <h3>Erro ao carregar an√∫ncios</h3>
                <p>${erro.message}</p>
                <button onclick="loadAds()" style="margin-top: 15px; padding: 8px 20px; background: #0d6efd; color: white; border: none; border-radius: 4px; cursor: pointer;">
                    Tentar novamente
                </button>
            </div>
        `;
    }
}
    
function openAd(id) {
    if (!id) {
        alert('ID do an√∫ncio inv√°lido');
        return;
    }
    window.location.href = `viewad-botton.html?id=${id}`;
}
</script>

