<div id="adWindow">
    <a id="adLink" href="#" target="_blank" onclick="abrirAnuncio(event)">
        <div style="width: 100%; height: 100%; display: flex; align-items: center; justify-content: center; background: #f8f9fa; cursor: pointer;">
            <div style="text-align: center;">
                <h3 id="adTitle">Carregando anúncio...</h3>
                <p>Clique aqui para abrir o anúncio em nova aba</p>
            </div>
        </div>
    </a>
    <iframe id="adFrame" src="" style="display: none;"></iframe>
</div>





<button id="confirmBtn" onclick="creditUser()">CONFIRMAR CRÉDITO</button>

<script>

let duration = 30;
let seconds = 0;
let angle = 0;
let interval;
let progressStep;
let anuncioId = null;
let user = null;
let anuncioUrl = "https://example.com"; // NOVA VARIÁVEL

// NOVA FUNÇÃO PARA CARREGAR DADOS DO ANÚNCIO
async function carregarAnuncio() {
    try {
        const response = await fetch(`https://ciclone-62mq.onrender.com/api/anuncios/${anuncioId}`);
        const data = await response.json();
        
        if (data.success) {
            anuncioUrl = data.anuncio.link_anuncio;
            document.getElementById('adTitle').textContent = data.anuncio.titulo;
            document.getElementById('adLink').href = anuncioUrl;
        }
    } catch (error) {
        console.log('Erro ao carregar anúncio:', error);
    }
}

// NOVA FUNÇÃO PARA ABRIR ANÚNCIO
function abrirAnuncio(event) {
    window.open(anuncioUrl, '_blank');
    event.preventDefault();
    return false;
}

function startAd() {
    user = JSON.parse(localStorage.getItem('user'));
    if (!user) {
        document.body.innerHTML = `
            <div style="text-align: center; padding: 50px;">
                <h2>❌ Usuário não logado</h2>
                <p>Faça login para visualizar anúncios</p>
                <button onclick="window.location.href='login-top.html'" 
                        style="padding: 10px 20px; background: #0d6efd; color: white; border: none; border-radius: 5px; cursor: pointer;">
                    Fazer Login
                </button>
            </div>
        `;
        return;
    }

    const params = new URLSearchParams(location.search);
    anuncioId = params.get("id") || 1;

    // TROCA O IFRAME POR LINK CLICÁVEL
    document.getElementById("adFrame").style.display = "none";
    carregarAnuncio(); // CARREGA DADOS DO ANÚNCIO

    progressStep = 100 / duration;
    document.getElementById("timeInfo").innerText = "Aguarde " + duration + " segundos...";

    interval = setInterval(updateTimer, 1000);
}

// ... (o resto do código permanece igual)




